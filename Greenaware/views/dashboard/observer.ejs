<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Observer Dashboard - Greenaware</title>
    <link rel="stylesheet"href="/css/styles.css">
</head>
<body>
    <!-- Top Navbar -->
    <nav class="top-navbar">
        <div class="branding">
            <img src="/images/greenaware.png" alt="Greenaware Logo">
            <span>Greenaware</span>
        </div>
        <div class="user-info">
            <span>Welcome, Observer!</span>
            <a href="/login" class="button">Log out</a>
        </div>
    </nav>

    <!-- Side Menu -->
    <aside class="side-menu">
        <ul>
            <li class="active">Dashboard</li>
            <li>Account</li>
            <li>Observation Data</li>
            <li>Messages</li>
        </ul>
    </aside>

    <!-- Main Content Area -->
    <main class="main-content">
        <h1>Observer Dashboard</h1>
        <div class="account-details">
            <!-- Display account details here -->
        </div>
        <div class="observation-data">
            <!-- Display observation data here -->
        </div>
        <div class="messages">
            <!-- Display messages and messaging functionality here -->
        </div>
    </main>

    <script src="script.js"></script>
</body>
</html>
